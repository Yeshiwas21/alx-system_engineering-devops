#!/usr/bin/env bash
# This script configures Nginx to add a custom header to the HTTP response

# Update package list and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Create a custom Nginx configuration file
echo "add_header X-Served-By \$hostname;" | sudo tee /etc/nginx/conf.d/custom_header

# Restart Nginx to apply the changes
sudo systemctl restart nginx
